        grid-template-columns: 1fr;
    }
    
    .hero-stats {
        gap: 1.5rem;
    }
    overflow: hidden;
    display: flex;
    flex-direction: row;
}

.reg-header {
    background-color: #1a1a1a;
    color: white;
    padding: 1.5rem;
    text-align: center;
    border-bottom: 1px solid #333;
}

.reg-header h2 {
    margin: 0;
    font-size: 1.6rem;
    font-weight: 400;
    letter-spacing: 2px;
    text-transform: uppercase;
    font-family: 'Outfit', sans-serif;
}

.reg-body {
    display: flex;
    flex-direction: row;
    width: 100%;
    min-height: 550px;
}

.reg-form {
    flex: 1;
    padding: 3rem;
    background: white;
}

.reg-form form {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 2rem;
}

.reg-image {
    flex: 1;
    background: url('https://images.unsplash.com/photo-1522202176988-66273c2fd55f?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80') no-repeat center center;
    background-size: cover;
    position: relative;
}

/* Form Fields Styling - Floating Labels */
.reg-form .form-group {
    margin-bottom: 0;
    position: relative;
}

.reg-form .form-group.full-width {
    grid-column: span 2;
}

.reg-form input,
.reg-form select {
    width: 100%;
    padding: 1.2rem 0.75rem 0.5rem;
    border: 1px solid #d1d5db;
    border-radius: 8px;
    font-size: 1rem;
    color: #1f2937;
    background-color: #f9fafb;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.reg-form input:focus,
.reg-form select:focus {
    outline: none;
    border-color: #a52a2a;
    background-color: white;
    box-shadow: 0 0 0 4px rgba(165, 42, 42, 0.08);
}

/* Floating Label */
.reg-form label {
    position: absolute;
    left: 0.75rem;
    top: 50%;
    transform: translateY(-50%);
    font-size: 1rem;
    font-weight: 400;
    color: #6b7280;
    pointer-events: none;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    background: transparent;
    padding: 0 0.25rem;
}

/* Float label when input is focused or has content */
.reg-form input:focus + label,
.reg-form input:not(:placeholder-shown) + label,
.reg-form select:focus + label,
.reg-form select:valid + label {
    top: 0;
    transform: translateY(-50%);
    font-size: 0.75rem;
    font-weight: 600;
    color: #a52a2a;
    background: white;
    padding: 0 0.25rem;
}

/* Static labels for date and select */
.reg-form label.static-label {
    position: static;
    display: block;
    font-size: 0.75rem;
    font-weight: 600;
    color: #6b7280;
    margin-bottom: 0.5rem;
    text-transform: none;
    letter-spacing: 0.5px;
}

.reg-form input[type="date"],
.reg-form select {
    padding: 0.75rem;
}

.btn-submit {
    grid-column: span 2;
    display: block;
    width: 100%;
    padding: 1.1rem;
    background: linear-gradient(135deg, #a52a2a 0%, #8a2323 100%);
    color: white;
    border: none;
    border-radius: 8px;
    font-size: 1rem;
    font-weight: 700;
    text-transform: uppercase;
    cursor: pointer;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    margin-top: 0.5rem;
    letter-spacing: 1.5px;
    box-shadow: 0 4px 12px rgba(165, 42, 42, 0.3);
}

.btn-submit:hover {
    background: linear-gradient(135deg, #8a2323 0%, #6b1a1a 100%);
    transform: translateY(-2px);
    box-shadow: 0 8px 20px rgba(165, 42, 42, 0.4);
}

/* Responsive */
@media (max-width: 768px) {
    .reg-card {
        flex-direction: column;
    }
    .reg-body {
        flex-direction: column;
    }
    .reg-image {
        height: 250px;
        order: -1;
    }
    .reg-form {
        padding: 2rem;
    }
    .reg-form form {
        grid-template-columns: 1fr;
        gap: 1.5rem;
    }
    .reg-form .form-group.full-width {
        grid-column: span 1;
    }
    .btn-submit {
        grid-column: span 1;
    }
}

/* Page Background for Registration */
body.register-page {
    background: linear-gradient(rgba(0, 0, 0, 0.7), rgba(0, 0, 0, 0.7)), 
                url('https://images.unsplash.com/photo-1523240795612-9a054b0db644?ixlib=rb-4.0.3&auto=format&fit=crop&w=1920&q=80');
    background-size: cover;
    background-position: center;
    background-attachment: fixed;
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 2rem;
}